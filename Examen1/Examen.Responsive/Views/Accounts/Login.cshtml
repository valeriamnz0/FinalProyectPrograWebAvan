@model LoginInputModel

<style>

    .header {
        margin-bottom: 20px;
    }

        .header h3 {
            margin-bottom: 5px;
            margin-top: 25px;
        }

    .separator {
        height: 1px;
        background: #e8e8e8;
        margin: 0px -25px;
    }

    .inputs {
        margin-top: 25px;
    }

        .inputs label {
            letter-spacing: 1px;
            margin-bottom: 7px;
        }

        .inputs #submit {
            width: 100%;
            margin-top: 20px;
            padding: 15px 0;
            letter-spacing: 1px;
        }
</style>

<div class="form-row">
    <div class="form-group col-5">
        <form method="post">
            <div class="form-group header">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h3>Login</h3>
            </div>

            <div class="form-group">
                <div class="clearfix separator"></div>
            </div>

            <div class="form-group inputs">
                <label asp-for="Email" class="form-text"></label>
                <input asp-for="Email" class="form-control" placeholder="E-Mail" autofocus />
                <span asp-validation-for="Email" class="text-danger"></span>

                <label asp-for="Password" class="form-text"></label>
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group inputs">
                <button id="submit" type="submit" class="btn btn-outline-primary">Login</button>
                <br />
                <a asp-action="forgetpassword">Olvidé contraseña</a>
            </div>

        </form>
    </div>

    <div class="form-group col-5">
        <form asp-action="externallogin" method="post" asp-route-returnUrl="@Model.ReturnUrl">
            <div class="form-group header">
                <h3>External Login</h3>
            </div>

            <div class="form-group">
                <div class="clearfix separator"></div>
            </div>

            <div class="form-group inputs">
                @if (Model.ExternalLogins.Count == 0)
                {
                    <div>There are no external authentication services configured.</div>
                }

                @foreach (var externalLogin in Model.ExternalLogins)
                {
                    <button type="submit" name="provider" class="btn btn-outline-primary"
                            value="@externalLogin.Name">
                        @switch (externalLogin.Name)
                        {
                            case "Google":
                                <i class="fa-brands fa-google"></i>
                                break;
                        }
                        @externalLogin.DisplayName
                    </button>
                }
            </div>
        </form>
    </div>
</div>


@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
